<h1><%= h(@product.name) %></h1>

<div class="product-detail">
  <p><%= h(@product.description) %></p>
  <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
  <p><strong>Stock Quantity:</strong> <%= @product.stock_quantity %></p>
  <p><strong>Category:</strong> <%= h(@product.category.name) %></p>

  <% if @product.images.attached? %>
    <div class="product-images">
      <% @product.images.each do |image| %>
        <%= image_tag url_for(image), alt: h(@product.name), class: 'product-image' %>
      <% end %>
    </div>
  <% end %>

  <%= button_to 'Add to Cart', add_to_cart_path(@product), method: :post, class: 'btn btn-success add-to-cart-button' %>
</div>
