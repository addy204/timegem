<h1>Order Summary</h1>

<p>Order ID: <%= @order.id %></p>
<p>Status: <%= @order.order_status.capitalize %></p>
<p>Total: <%= number_to_currency(@order.total) %></p>

<h2>Customer Details</h2>
<% if @order.customer %>
  <p>Name: <%= @order.customer.name %></p>
  <p>Email: <%= @order.customer.email %></p>
<% else %>
  <p>Customer information is not available.</p>
<% end %>

<h2>Address Details</h2>
<% if @order.customer && @order.customer.addresses.any? %>
  <% address = @order.customer.addresses.last %>
  <p><%= address.address_line_1 %></p>
  <p><%= address.address_line_2 %></p>
  <p><%= address.city %>, <%= address.province.name %></p>
  <p><%= address.postal_code %></p>
  <p><%= address.country %></p>
<% else %>
  <p>Address information is not available.</p>
<% end %>

<h2>Order Items</h2>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= number_to_currency(item.price * item.quantity) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Summary</h2>
<% if @order.customer && @order.customer.province && @order.customer.province.tax_rate %>
  <p>Subtotal: <%= number_to_currency(@order.subtotal) %></p>
  <p>GST: <%= number_to_currency(@order.subtotal * @order.customer.province.tax_rate.gst) %></p>
  <p>PST: <%= number_to_currency(@order.subtotal * @order.customer.province.tax_rate.pst) %></p>
  <p>HST: <%= number_to_currency(@order.subtotal * @order.customer.province.tax_rate.hst) %></p>
  <p>Taxes: <%= number_to_currency(@order.calculate_taxes) %></p>
  <p><strong>Total after Taxes: <%= number_to_currency(@order.total) %></strong></p>
<% else %>
  <p>Subtotal: <%= number_to_currency(@order.subtotal) %></p>
  <p>Taxes: Information not available</p>
<% end %>

<%= link_to 'Back to My Orders', orders_path %>
