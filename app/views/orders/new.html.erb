<h1>Checkout</h1>

<%= form_with model: @order, local: true do |form| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Customer Details</h3>
  <%= form.fields_for :customer do |customer_form| %>
    <div>
      <%= customer_form.label :name %>
      <%= customer_form.text_field :name %>
    </div>
    <div>
      <%= customer_form.label :email %>
      <%= customer_form.text_field :email %>
    </div>

    <h3>Address Details</h3>
    <%= customer_form.fields_for :addresses do |address_form| %>
      <div>
        <%= address_form.label :address_line_1 %>
        <%= address_form.text_field :address_line_1 %>
      </div>
      <div>
        <%= address_form.label :address_line_2 %>
        <%= address_form.text_field :address_line_2 %>
      </div>
      <div>
        <%= address_form.label :city %>
        <%= address_form.text_field :city %>
      </div>
      <div>
        <%= address_form.label :province %>
        <%= address_form.text_field :province %>
      </div>
      <div>
        <%= address_form.label :postal_code %>
        <%= address_form.text_field :postal_code %>
      </div>
      <div>
        <%= address_form.label :country %>
        <%= address_form.text_field :country %>
      </div>
    <% end %>
  <% end %>

  <div>
    <%= form.submit "Place Order" %>
  </div>
<% end %>
