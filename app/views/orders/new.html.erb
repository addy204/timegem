<h1>Checkout</h1>

<%= form_with model: @order, local: true do |f| %>
  <%= f.fields_for :customer do |customer_fields| %>
    <h2>Customer Information</h2>
    <div>
      <%= customer_fields.label :name %>
      <%= customer_fields.text_field :name %>
    </div>
    <div>
      <%= customer_fields.label :email %>
      <%= customer_fields.email_field :email %>
    </div>

    <%= customer_fields.fields_for :addresses do |address_fields| %>
      <h2>Shipping Address</h2>
      <div>
        <%= address_fields.label :address_line_1 %>
        <%= address_fields.text_field :address_line_1 %>
      </div>
      <div>
        <%= address_fields.label :address_line_2 %>
        <%= address_fields.text_field :address_line_2 %>
      </div>
      <div>
        <%= address_fields.label :city %>
        <%= address_fields.text_field :city %>
      </div>
      <div>
        <%= address_fields.label :province %>
        <%= address_fields.text_field :province %>
      </div>
      <div>
        <%= address_fields.label :postal_code %>
        <%= address_fields.text_field :postal_code %>
      </div>
      <div>
        <%= address_fields.label :country %>
        <%= address_fields.text_field :country %>
      </div>
    <% end %>
  <% end %>

  <h2>Order Summary</h2>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @cart['items'].each do |item| %>
        <% product = Product.find(item['product_id']) %>
        <tr>
          <td><%= product.name %></td>
          <td><%= item['quantity'] %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * item['quantity']) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= f.submit "Place Order" %>
  </div>
<% end %>
