<h1>My Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Status</th>
      <th>Total</th>
      <th>Order Date</th>
      <th>Products</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.status %></td>
        <td><%= number_to_currency(order.total) %></td>
        <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <% order.order_items.each do |item| %>
            <p><%= item.product.name %> (x<%= item.quantity %>): <%= number_to_currency(item.price * item.quantity) %></p>
          <% end %>
        </td>
        <td><%= link_to 'View', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
