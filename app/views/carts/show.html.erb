<h1>Your Shopping Cart</h1>

<% if @cart['items'].empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart['items'].each do |item| %>
        <% product = Product.find(item['product_id']) %>
        <tr>
          <td><%= link_to product.name, product_path(product) %></td>
          <td>
            <%= form_with url: update_cart_path(product_id: product.id), method: :patch, local: true do |form| %>
              <%= form.hidden_field :product_id, value: product.id %>
              <%= form.number_field :quantity, value: item['quantity'], min: 1 %>
              <%= form.submit "Update" %>
            <% end %>
          </td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * item['quantity']) %></td>
          <td>
            <%= button_to 'Remove', remove_from_cart_path(product_id: product.id), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Continue Shopping', root_path %>
  <%= link_to 'Checkout', new_order_path %>
<% end %>
